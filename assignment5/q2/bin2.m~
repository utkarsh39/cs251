file_id4= fopen('bin6.data', 'w');
for i=1:4
	for j=1:sample(i)
		pmf(j)=binopdf(num(i)(j),n,p);
               	fprintf(file_id(i),'%e\t%e\n',num(i),pmf(i));
	endfor
