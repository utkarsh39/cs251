n=50;
p=0.3;
sample={1000,10000,100000,1000000};

sample3=1000
sample4=10000
sample5=100000
sample6=1000000


num(1)=binornd(50,0.3,1,sample3);
num(2)=binornd(50,0.3,1,sample4);
